{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "post",
      "pageBundle": true,
      "previewPath": "/blog/",
      "filePrefix": null,
      "fields": [
        {
          "title": "Título",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Descripción",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "Fecha",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Imagen destacada",
          "name": "image",
          "type": "image"
        },
        {
          "title": "Borrador",
          "name": "draft",
          "type": "boolean",
          "default": false
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "Blog Posts",
      "path": "[[workspace]]/content/posts",
      "contentTypes": ["post"]
    }
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.taxonomy.tags": [
    "TypeScript",
    "Python",
    "Automatización",
    "React",
    "JavaScript",
    "CSS",
    "DevOps",
    "Tutorial"
  ],
  "frontMatter.framework.id": "other",
  "frontMatter.preview.host": "http://localhost:5173",
  "frontMatter.dashboard.openOnStart": false
}
